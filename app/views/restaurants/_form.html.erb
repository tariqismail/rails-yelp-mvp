<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category,
               collection: %w[chinese italian japanese french belgian],
               prompt: "Choose a category" %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
