<h1><%= @restaurant.name %></h1>
<h3 class="text-muted"><%= @restaurant.category.capitalize %></h3>
<div class="restaurant-details my-3">
  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
</div>
<hr>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h4>Reviews</h4>
  <%= link_to 'Add a Review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
</div>
<% @restaurant.reviews.each do |review| %>
  <div class="card my-2">
    <div class="card-body d-flex justify-content-between align-items-center">
      <p class="card-text"><%= review.content %></p>
      <div>
      <% review.rating.times do %>
        ‚≠ê
      <% end %>
      </div>

    </div>
  </div>
<% end %>
